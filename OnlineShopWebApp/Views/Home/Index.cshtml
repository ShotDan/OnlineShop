@model List<ProductViewModel>
@{
    ViewData["Title"] = "Home Page";
}
<div class="row">

    @if (!string.IsNullOrEmpty(ViewBag.LoggedInMessage))
    {
        <div class="modal fade" id="successModal" tabindex="-1" role="dialog" aria-labelledby="successModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="successModalLabel">Успешный вход</h5>
                        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        @ViewBag.LoggedInMessage
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-dark" data-bs-dismiss="modal">Закрыть</button>
                    </div>
                </div>
            </div>
        </div>

        <script>
            $(document).ready(function () {
                $('#successModal').modal('show');
            });
        </script>
    }

    @foreach (var product in Model)
    {
        <div class="col-3 card shadow">
            <img class="card-img-top" src="https://www.megaportpc.nl/media/catalog/product/c/o/corsair_spec-04_hauptansicht-min.jpg"></img>
            <div class="card-body">
                <a style="color:black" href="/product/index/@product.Id">
                    <h5>@product.Name</h5>
                </a>
                <h5>@product.Cost руб</h5>
                <a class="btn btn-dark" href="/cart/AddToCart?productId=@product.Id" role="button">Добавить в корзину</a>
            </div>
        </div>
    }
</div>

