@model ProductViewModel

<div class="row">
    <div class="col-6 card shadow">
        <img class="card-img-top" src="https://www.megaportpc.nl/media/catalog/product/c/o/corsair_spec-04_hauptansicht-min.jpg"></img>
        <div class="card-body">
            <h5>@Model.Name</h5>
            <p style="font-size:12px">@Model.Description</p>
            <h5>@Model.Cost руб</h5>
            <a class="btn btn-dark" href="/Cart/AddToCart?productId=@Model.Id" role="button">Добавить в корзину</a>
            <a class="btn btn-dark" href="/home/index" role="button">Продолжить покупки</a>
        </div>
    </div>
</div>