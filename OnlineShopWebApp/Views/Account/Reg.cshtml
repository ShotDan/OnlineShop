@model UserRegInfo  
<form method="post">
    <div class="row">
        <div class="col-md-4 card shadow-lg mx-auto">

            <h3 style="text-align: center; margin-top: 20px;">Регистрация</h3>

            <div class="form-group" style="margin:10px">
                <input asp-for="Login" class="form-control" placeholder="Логин">
                <span asp-validation-for="Login" style="color:red"></span>
            </div>

            <div class="form-group" style="margin:10px">
                <input asp-for="Password" type="password" class="form-control" placeholder="Пароль">
                <span asp-validation-for="Password" style="color:red"></span>
            </div>

            <div class="form-group" style="margin:10px">
                <input asp-for="RepeatPassword" type="password" class="form-control" placeholder="Подтвердите пароль">
                <span asp-validation-for="RepeatPassword" style="color:red"></span>
            </div>

            <div class="has-validation" style="color:red" asp-validation-summary="ModelOnly"></div>

            <div style="text-align:center">
                <button class="btn btn-dark" style="margin-top: 8px; margin-bottom: 13px; width: 300px;" type="submit" asp-controller="Account" asp-action="Reg">Зарегистрироваться</button>
            </div>
        </div>
    </div>
</form>