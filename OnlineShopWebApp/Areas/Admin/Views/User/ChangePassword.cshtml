@model UserChangePassword

<form method="post">
    <h4>Смена пароля</h4>
    <div class="row">
        <label for="cost" class="col-sm-2 col-form-label">Пароль:</label>
        <div class="col-sm-8">
            <input asp-for="Password" type="password" class="form-control">
            <span asp-validation-for="Password" style="color:red"></span>

        </div>
    </div>
    <br />
    <div class="row">
        <label for="description" class="col-sm-2 col-form-label">Подтвердите пароль</label>
        <div class="col-sm-8">
            <input asp-for="RepeatPassword" type="password" class="form-control">
            <span asp-validation-for="RepeatPassword" style="color:red"></span>
        </div>
    </div>
    <br />
    <div class="has-validation" style="color:red" asp-validation-summary="ModelOnly"></div>
    <br />

    <button type="submit" class="btn btn-dark" asp-area="Admin" asp-controller="User" asp-action="ChangePassword" asp-route-id="@ViewData["UserID"]">Сохранить</button>
    <a class="btn btn-outline-dark" asp-area="Admin" asp-controller="User" asp-action="Users" style="margin-left: 20px;">Отмена</a>
</form>