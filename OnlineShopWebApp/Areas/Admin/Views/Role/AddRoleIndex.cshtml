@model Role

<form method="post">
    <h4>Добавление роли</h4>
    <br />
    <div class="row">
        <label for="name" class="col-sm-2 col-form-label">Название роли:</label>
        <div class="col-sm-8">
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" style="color:red"></span>
            <div class="has-validation" asp-validation-summary="ModelOnly"></div>
        </div>
    </div>
    <br />
    <br />
    <button type="submit" class="btn btn-dark" asp-area="Admin" asp-controller="Role" asp-action="AddRole">Сохранить</button>
    <a class="btn btn-outline-dark" asp-area="Admin" asp-controller="Role" asp-action="Roles">Отмена</a>
</form>