@model ProductViewModel
<form method="post">
    <h4>Редактирование товара</h4>
    <br />

    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="row">
        <label for="name" class="col-sm-2 col-form-label">название товара:</label>
        <div class="col-sm-8">
            <input asp-for="Name" class="form-control" value="@Model.Name">
            <span asp-validation-for="Name" style="color:red"></span>
        </div>
    </div>
    <br />
    <div class="row">
        <label for="cost" class="col-sm-2 col-form-label">цена товара, руб.:</label>
        <div class="col-sm-8">
            <input asp-for="Cost" class="form-control" value="@Model.Cost">
            <span asp-validation-for="Cost" style="color:red"></span>
        </div>
    </div>
    <br />
    <div class="row">
        <label for="description" class="col-sm-2 col-form-label">описание товара:</label>
        <div class="col-sm-8">
            <input asp-for="Description" type="text" class="form-control" value="@Model.Description">
            <span asp-validation-for="Description" style="color:red"></span>
        </div>
    </div>
    <br />
    <br />
    <button type="submit" class="btn btn-dark" asp-area="Admin" asp-controller="Product" asp-action="EditProduct" >Сохранить</button>
    <a class="btn btn-outline-dark" asp-area="Admin" asp-controller="Product" asp-action="Products">Отмена</a>
</form>