@model List<ProductViewModel>

<div class="row">
    @await Html.PartialAsync("AdminMenu")

    <div class="col-10 text-center">
        <h3>Список продуктов</h3>

        <table class="table">
            <thead>
                <tr>
                    <th>№</th>
                    <th>Название</th>
                    <th>Цена</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@(i + 1)</td>
                        <td><a style="color:black;text-decoration: none" href="/product/index/@Model[i].Id">@Model[i].Name</a></td>
                        <td>@Model[i].Cost</td>
                        <td>
                            <a asp-area="Admin" asp-controller="Product" asp-action="EditProductIndex" asp-route-id="@Model[i].Id" style="text-decoration: none">Редактировать</a>
                            <a asp-area="Admin" asp-controller="Product" asp-action="DelProduct" asp-route-id="@Model[i].Id" style="margin-left: 30px;text-decoration: none">Удалить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a class="btn btn-outline-dark" asp-area="Admin" asp-controller="Product" asp-action="AddProductIndex">Добавить новый продукт</a>
    </div>
</div>