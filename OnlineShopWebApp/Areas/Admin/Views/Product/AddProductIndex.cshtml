@model ProductViewModel 

<form method="post">
    <h4>Добавление товара</h4>
    <br />
    <div class="row">
        <label for="name" class="col-sm-2 col-form-label">Название товара:</label>
        <div class="col-sm-8">
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" style="color:red"></span>
        </div>
    </div>
    <br />
    <div class="row">
        <label for="cost" class="col-sm-2 col-form-label">Цена товара, руб.:</label>
        <div class="col-sm-8">
            <input asp-for="Cost" class="form-control">
            <span asp-validation-for="Cost" style="color:red"></span>

        </div>
    </div>
    <br />
    <div class="row">
        <label for="description" class="col-sm-2 col-form-label">Описание товара:</label>
        <div class="col-sm-8">
            <input asp-for="Description" class="form-control">
            <span asp-validation-for="Description" style="color:red"></span>
        </div>
    </div>
    <br />
    <br />
    <button type="submit" class="btn btn-dark" asp-area="Admin" asp-controller="Product" asp-action="AddProduct">Сохранить</button>
    <a class="btn btn-outline-dark" asp-area="Admin" asp-controller="Product" asp-action="Products">Отмена</a>
</form>